{
    "name": "mksec/silex-base",
    "description": "Base classes for creating Silex applications",
    "homepage": "https://github.com/mksec/silex-base",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexander Haase",
            "email": "ahaase@mksec.de"
        }
    ],
    "require": {
        "php": "~7.0",
        "silex/silex": "~2.0"
    },
    "suggest": {
        "symfony/asset": "For using the BaseUiApplication",
        "symfony/twig-bridge": "For using the BaseUiApplication",
        "twig/twig": "For using the BaseUiApplication",
        "silex/web-profiler": "For using the Web Profiler in BaseUiApplication"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.7",
        "phpunit/phpunit": "^6.4",
        "symfony/browser-kit": "~2.8 || ^3.0",

        "symfony/asset": "~2.8 || ^3.0",
        "symfony/twig-bridge": "~2.8 || ^3.0",
        "twig/twig": "~1.28 || ^2.0",
        "silex/web-profiler": "^2.0"
    },

    "autoload": {
        "psr-4": {
            "SilexBase\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SilexBase\\Tests\\" : "tests/"
        }
    },

    "bin": [
        "bin/asset-manifest"
    ]
}
